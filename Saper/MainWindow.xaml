<Window
    x:Class="Saper.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Saper"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title=" SAPER"
    Width="850"
    Height="650"
    ResizeMode="CanMinimize"
    WindowStyle="None"
    mc:Ignorable="d">

    <!--<Border BorderBrush="#bdbdbd" BorderThickness="3">
        <Border BorderBrush="#ffffff" BorderThickness="5">
            <Border BorderBrush="#bdbdbd" BorderThickness="2">-->

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/Background.jpg" Stretch="Fill" />
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border
            Name="GameBorder"
            Grid.Row="0"
            BorderBrush="Transparent"
            BorderThickness="10"
            MouseLeftButtonDown="Border_MouseLeftButtonDown" />

        <Frame
            Name="MainFrame"
            Grid.Row="1"
            NavigationUIVisibility="Hidden" />
    </Grid>
    <!--</Border>
        </Border>
    </Border>-->

</Window>
